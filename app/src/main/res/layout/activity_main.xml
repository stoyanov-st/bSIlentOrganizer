<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/loginbackground"
    android:baselineAligned="false"
    android:visibility="visible"
    android:weightSum="1"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="bg.uni_ruse.stoyanov.bsilentorganizer.MainActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="200dp"
        android:layout_height="205dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:contentDescription="@string/bsilentlogo"
        android:foregroundGravity="center_horizontal|center"
        app:srcCompat="@drawable/bsilentlogonobg" />

    <EditText
        android:id="@+id/userNameInputBox"
        android:layout_width="280dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/inputbox"
        android:ems="10"
        android:fontFamily="sans-serif-condensed"
        android:hint="@string/username"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        android:textColorLink="@color/colorWhite"
        android:textSize="24sp"
        android:textCursorDrawable="@null"/>

    <EditText
        android:id="@+id/passwordInputBox"
        android:layout_width="280dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="false"
        android:layout_below="@+id/userNameInputBox"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="280dp"
        android:background="@drawable/inputbox"
        android:ems="10"
        android:fontFamily="sans-serif-condensed"
        android:hint="@string/password"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        android:textColorLink="@color/colorWhite"
        android:textSize="24sp"
        android:textCursorDrawable="@null"/>

    <Button
        android:id="@+id/loginButton"
        android:background="@drawable/loginbutton"
        android:layout_width="260dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorBlack"
        android:textSize="26sp"
        android:fontFamily="sans-serif-light"
        android:text="@string/login"
        android:layout_below="@+id/passwordInputBox"
        android:layout_alignStart="@+id/passwordInputBox" />

    <TextView
        android:id="@+id/dontHaveAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="@string/no_account"
        android:textSize="16sp"
        android:textColor="@color/colorWhite"
        android:fontFamily="sans-serif-light"/>

</RelativeLayout>
