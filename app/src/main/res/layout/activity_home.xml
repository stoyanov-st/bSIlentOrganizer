<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android.support.v7.appcompat="http://schemas.android.com/apk/res-auto"
    tools:context="bg.uni_ruse.stoyanov.bsilentorganizer.HomeActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimaryDark"
        android.support.v7.appcompat:navigationIcon="@drawable/ic_menu_white_26dp"
        android.support.v7.appcompat:title="@string/app_name"
        android.support.v7.appcompat:titleTextColor="@color/colorWhite"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <com.facebook.login.widget.ProfilePictureView
        android:id="@+id/fb_profile_picture"
        android:layout_width="50dp"
        android:layout_height="55dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="3dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">

    </com.facebook.login.widget.ProfilePictureView>
    <Switch
        android:id="@+id/switch1"
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="@string/silent_mode"
        android:fontFamily="sans-serif-light"
        android:textSize="@dimen/label_text_size"
        android:textAppearance="@android:style/TextAppearance"
        android:textColor="@color/colorBlack" />

    <Switch
        android:id="@+id/vibrationModeSwitch"
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/use_vibration_mode"
        android:fontFamily="sans-serif-light"
        android:textSize="@dimen/label_text_size"
        android:textColor="@color/colorBlack"
        android:layout_below="@+id/switch1"
        android:layout_alignStart="@+id/switch1" />

</RelativeLayout>
