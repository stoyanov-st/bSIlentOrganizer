<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android.support.v7.appcompat="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    app:ignore="NamespaceTypo"
    android:id="@+id/toolbar"
    app:layout_collapseMode="pin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorPrimaryDark"
    android.support.v7.appcompat:title="@string/app_name"
    android.support.v7.appcompat:titleTextColor="@color/colorWhite"
    android:minHeight="?attr/actionBarSize"
    android:theme="@style/AppTheme"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true"
    >

    <com.facebook.login.widget.ProfilePictureView
        android:id="@+id/fb_profile_picture"
        android:layout_width="50dp"
        android:layout_height="55dp"
        android:layout_gravity="end"
        android:layout_marginEnd="2dp"
        android:visibility="gone">
    </com.facebook.login.widget.ProfilePictureView>

    <ImageView
        android:id="@+id/g_profile_picture"
        android:fitsSystemWindows="true"
        android:layout_width="50dp"
        android:layout_height="55dp"
        android:layout_gravity="end"
        android:layout_marginEnd="2dp"
        android:visibility="gone"
        android:contentDescription="@string/profilepicture"/>

</android.support.v7.widget.Toolbar>